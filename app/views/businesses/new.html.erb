<div class="my-div navbar hidden-tablet hidden-phone">

<%= image_tag "logo.png", style: 'height:50px;margin-bottom:20px;' %>

<%= simple_form_for @business do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                label: false,
                placeholder: 'Business name',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'input' } %>
    <%= f.input :address,
                label: false,
                placeholder: 'Address',
                required: true,
                autofocus: true,
                input_html: { class: 'input' } %>

    <%= f.input :description,
                required: true,
                placeholder: 'Description',
                label: false,
                input_html: { autocomplete: "new-password", class: 'input'  } %>
  </div>

  <div class="form-actions main-button">
    <%= f.submit "Sign up", class: 'main-button' %>
  </div>
<% end %>


<%# <%= render "devise/shared/links" %>

</div>
