<div class="my-div navbar hidden-tablet hidden-phone">

<%= image_tag "logo.png", style: 'height:90px;margin-bottom:50px;' %>

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                label: false,
                placeholder: 'Email',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'input' } %>
    <%= f.input :password,
                required: true,
                placeholder: 'Password',
                label: false,
                input_html: { autocomplete: "new-password", class: 'input'  } %>
    <%= f.input :password_confirmation,
                label: false,
                required: true,
                placeholder: 'Confirm password',
                input_html: { autocomplete: "new-password", class: 'input'  } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "main-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
