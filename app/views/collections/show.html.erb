<div class="banner" style="background-image: url(<%= cl_image_path @collection.banner.key %>)">
  <div class="wrapper">
    <div class="avatar-wrapper">
      <%= cl_image_tag @collection.photo.key, class: "avatar-square" %>
    </div>
  </div>
</div>
<div class="banner-seperator">
</div>
<div class="wrapper border-bottom">
  <div>
    <p class="fs-2 fw-bold mb-0"><%= @collection.name %></p>
    <a href="<%= business_path(@collection.business) %>" class="text-decoration-none text-dark">By <span class="fw-bold"><%= @collection.business.name %></span></a>
    <p class="fs-6 my-0 mb-1 mt-2">Total items <span class="fw-bold"><%= @collection.tokens.count %></span> <span class="mx-1">·</span> Created <span class="fw-bold"><%= @collection.created_at.strftime("%b %Y") %></span> <span class="mx-1">·</span> Chain <span class="fw-bold">Ethereum</span><span class="mx-1">·</span> Category <span class="fw-bold"><%= @collection.category %></span></p>
    <p><%= @collection.description %></p>
  </div>
</div>
<div class="wrapper">
  <p class="fs-5 fw-bold mb-3 mt-3"><%= @collection.tokens.count %> items</p>
  <div>
    <div class="row" style="padding-bottom: 80px;">
      <% @collection.tokens.each do |token| %>
        <div class="col-12 col-sm-6 col-md-3 mb-4 ">
          <div class="flip">
            <div class="card front bg-white position-relative">
              <% if token.photo.key %>
                <img src="<%= cl_image_path token.photo.key %>" class="card-img-top" alt="">
              <% end %>
              <div class="card-body pb-0">
                <p class="fw-bold rounded-pill d-flex justify-content-center align-items-center w-50 m-0 bg-warning right position-absolute top-0 start-0 mt-2 ms-2"><%= token.collection.category %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <p class="card-text fw-bold my-0 mb-1 fs-5"><%= token.collection.name %> <span class="fw-bold">#<%= token.identifier %></span></p>
                  <%= image_tag 'eth.svg', class:"svg rounded-circle" %>
                </div>
                <% if token.user %>
                  <p class="text-muted">Owned by <%= token.user.username %></p>
                <% else %>
                  <p class="text-muted"><i>Unclaimed</i></p>
                <% end %>
              </div>
            </div>
            <div class="back d-flex flex-column text-center border border-3 border-dark">
              <div class="p-3 my-auto">
                <h2 class="fs-1 mb-4"><%= token.collection.name %> <span class="fw-bold">#<%= token.identifier %></span></h2>
                <p class="py-2 rounded-pill border shadow-sm text-white bg-dark mb-4"><%= token.description %></p>
                <p class="text-secondary"><%= token.conditions %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%# footer %>
<div class="footer-container">
  <%= link_to businesses_path do %>
    <div class="footer-sm-container">
      <% if current_page?(businesses_path) %>
        <%= image_tag 'Search_active.svg', class: "footer-icon"%>
      <% else %>
        <%= image_tag 'Search.svg', class: "footer-icon"%>
      <% end %>
    <% end %>
    <%= content_tag :div, "", class: "footer-title" %>
  </div>
  <%= link_to tokens_path do %>
    <div class="footer-sm-container">
      <% if current_page?(tokens_path) %>
        <%= image_tag 'Map_active.svg', class: "footer-icon" %>
      <% else %>
        <%= image_tag 'Map.svg', class: "footer-icon" %>
      <% end %>
    <% end %>
    <%= content_tag :div, "", class: "footer-title" %>
  </div>
  <%= link_to user_path(current_user) do %>
    <div class="footer-sm-container">
      <% if current_page?(user_path(current_user)) %>
        <%= image_tag 'User_active.svg', class: "footer-icon" %>
      <% else %>
        <%= image_tag 'User.svg', class: "footer-icon" %>
      <% end %>
    <% end %>
    <%= content_tag :div, "", class: "footer-title" %>
  </div>
</div>
