<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-1" role="alert">
    <%= notice %>
    <button type="button" class="main-button" data-bs-dismiss="alert" aria-label="Close">
    Close
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="main-button" data-bs-dismiss="alert" aria-label="Close">
    Close
    </button>
    <% if user_signed_in? %><%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }%><% end %>
  </div>
<% end %>
