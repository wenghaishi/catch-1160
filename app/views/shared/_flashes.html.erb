<% if notice %>
  <div class="alert alert-info alert-dismissible fade show p-4 d-flex align-items-center justify-content-center rounded" role="alert">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show p-4 d-flex align-items-center justify-content-center rounded" role="alert">
    <%= alert %>
    <% if user_signed_in? %><%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }%><% end %>
  </div>
<% end %>
